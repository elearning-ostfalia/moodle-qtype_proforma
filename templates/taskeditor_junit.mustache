{{> qtype_proforma/taskeditor_test_start }}

<p>
<p>
    <label for='xml_ju_mainclass'>{{#str}} entrypoint, qtype_proforma {{/str}}<span class='red'>*</span> </label>
    <input class='mediuminput xml_ju_mainclass'
        title='usually name of class containing main method, including full package path (e.g. de.ostfalia.zell.editor)'
        value='{{ entrypoint }}'></input>

    <label for='xml_ju_framew'>Framework<span class='red'>*</span> </label>
    <select class='xml_ju_framew'><option selected='selected' value='JUnit'>JUnit</option></select>

    <label for='xml_ju_version'>{{#str}} version, qtype_proforma {{/str}}<span class='red'>*</span> </label>
    <select class='xml_ju_version'>
    </select>
</p>
</p>


{{> qtype_proforma/taskeditor_test_end }}

{{#js}}
    require(['qtype_proforma/taskeditor'], function(editor) {
        editor.setJunitVersions();
    });
{{/js}}