{{!
    @template qtype_proforma/taskeditor_file

    The purpose of this template is to render a file in ProFormA task editor

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        fileid,
        filesize
    }


    Urspr端ngliche Klassen f端r das Top-Level-Div:
    class='ui-widget ui-widget-content ui-corner-all xml_file drop_zone'

    Urspr端ngliche Klassen f端r den Header:
    class='ui-widget-header'

}}

<div id='file_{{ fileid }}' class='xml_file drop_zone fcontainer clearfix'>

<span class='file-header'><span class='box-typ'>{{#str}} taskeditorfile, qtype_proforma {{/str}} {{ fileid }}</span>
    <span class ='xml_filename_header'></span>
    <span class='rightButton'><button>x</button></span>
</span>

<p>
    <label for='xml_file_filename'>{{#str}} filename, qtype_proforma {{/str}}<span class='red'>*</span> </label>
    <input class='mediuminput xml_file_filename'>
    </input>

    <label for='xml_file_id'>ID: </label>
    <input class='tinyinput xml_file_id' value='{{ fileid }}'/>

    <label for='xml_file_type'>{{#str}} taskeditorstore, qtype_proforma {{/str}} </label>
    <select class='xml_file_type'>
        <option value = 'embedded' selected='selected'>{{#str}} taskeditorembedded, qtype_proforma {{/str}}</option>
        <option value = 'file'>{{#str}} taskeditorattached, qtype_proforma {{/str}}</option>
    </select>

    <span class='drop_zone_text'>{{#str}} taskeditordropzone, qtype_proforma {{/str}}</span>
</p>

<p style='display: none'>
    <label for='xml_internal_description'>Internal Description</label>
    <textarea rows='1' class='xml_internal_description'></textarea>
</p>

<p>
    <span class='xml_file_binary'>({{#str}} taskeditorbinary, qtype_proforma {{/str}}) <span
        class='xml_file_size'>{{#str}} taskeditorfilesize, qtype_proforma {{/str}}: {{ filesize }}</span></span>

    <span class='xml_file_non_binary'>
        <button class='xml_file_edit'>{{#str}} taskeditoredit, qtype_proforma {{/str}}</button>
        <label for='xml_file_editor_close'>
            <button class='xml_file_editor_close'>{{#str}} taskeditorhide, qtype_proforma {{/str}}</button>
        </label>
        <span>
            <textarea rows='3' cols='80' class='xml_file_text' onfocus='this.rows=10;' onmouseout='this.rows=6;'></textarea>
        </span>
    </span>
</p>
</div>

