<div id='test_ {{ testid }}' class='xml_test'>

    <h3 class='ui-widget-header'> {{ testname }} (Test #" {{ testid }} ")<span
        class='rightButton'><button onclick='TestWrapper.delete($(this));'>x</button></span>
    </h3>

    <p>
        <label for='xml_test_id'>ID<span class='red'>*</span>: </label>
        <input class='tinyinput xml_test_id' value='{{ testid }}' readonly/>

        <p><label for='xml_test_type'>{{#str}} testtype, qtype_proforma {{/str}}: </label>
        <select class='xml_test_type'> testTypes </select>
    </p>

    <p>
        <label for='xml_test_title'>{{#str}} testtitle, qtype_proforma {{/str}}<span class='red'>*</span>: </label>
        <input class='maxinput xml_test_title' value=' {{ testname }} '/>
    </p>

<p>
    <label for='xml_description'>{{#str}} testdescription, qtype_proforma {{/str}} : </label>
    <textarea rows='2' class='xml_description' title = 'Visible description'>description</textarea>
</p>

<p>
    <label for='xml_internal_description'  class='leftlabel'>Internal Description:</label>
    <textarea rows='2'  class='xml_internal_description' "title = 'Internal description (not visible for students)'>comment</textarea>
</p
