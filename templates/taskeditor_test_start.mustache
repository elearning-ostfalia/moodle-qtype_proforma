{{!
    @template qtype_proforma/taskeditor_file

    The purpose of this template is to render a file in ProFormA task editor

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        testid: "1",
        testtitle: "Name of test",
        description: "This tests deals with...",
        testtype: "java-checkstyle"
    }


    Urspr端ngliche Klassen f端r das Top-Level-Div:
    class='ui-widget ui-widget-content ui-corner-all xml_file drop_zone'

    Urspr端ngliche Klassen f端r den Header:
    class='ui-widget-header'

}}


<div id='test_{{ testid }}' class='xml_test'>

    <span class='test-header'><span class='box-typ'>Test {{ testid }}</span>

            <input type="text" style='display: none' value="{{ testid }}" size="2" disabled="disabled"></input>

            <label for='xml_test_type'>{{#str}} testtype, qtype_proforma {{/str}} </label>
            <input class='xml_test_type' disabled="disabled" value='{{ testtype }}'></input>

            <label>{{#str}} weight, qtype_proforma {{/str}}<span class='red'>*</span></label>
            <input class='tinyinput xml_test_weight' value='{{ weight }}'></input>


        <span class='rightButton'><button>x</button></span>
    </span>

    <p>
        <label for='xml_test_title'>{{#str}} testtitle, qtype_proforma {{/str}}<span class='red'>*</span> </label>
        <input class='xml_test_title' size="80" value='{{ testtitle }}'/>
    </p>

<p>
    <label for='xml_description'>{{#str}} testdescription, qtype_proforma {{/str}} </label>
    <textarea rows='2' cols='80' class='xml_description' title = 'Visible description'>{{ description }}</textarea>
</p>

<p>
    <label for='xml_internal_description'  class='leftlabel' style='display: none'>Internal Description</label>
    <textarea rows='2' class='xml_internal_description' "title = 'Internal description (not visible for students)'
        style='display: none'>{{ comment }}</textarea>
</p
