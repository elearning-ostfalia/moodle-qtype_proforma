{{!
    @template qtype_proforma/taskeditor_testfile_row

    The purpose of this template is to render a file in ProFormA task editor

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * filenamelabel

    Example context (json):
    {
       // "filenamelabel" : "Junit and other file(s)"
    }
}}

<tr>
    <td>
        <label for="xml_fileref_filename">{{#str}} taskeditorfiles, qtype_proforma {{/str}}
        {{ #filemandatory }}
            <span class="red">*</span>
        {{ /filemandatory }}
        </label>
    </td>
    <td>
        <select class="mediuminput fileref_filename xml_fileref_filename">
            <option> </option>
            <option>&lt;open...&gt;</option>
            <option>&lt;new file&gt;</option>
        </select>
    </td>
    <td>
        <label for="fileref_fileref" style="display: none;">Fileref: </label>
        <input class="tinyinput fileref_fileref" readonly="" style="display: none;"></input>
    </td>
    <td>
        <button class="taskeditor-collapse" title="show content" disabled="">{{#str}} taskeditorview, qtype_proforma {{/str}}</button>
    </td>
    <td>
        <button class="remove_item"  style="display: none;">x</button>
    </td>
    <td>
         <button class="add_fileref" title="add another filename">+</button>
         <br>
    </td>
    <td>
    </td>
</tr>