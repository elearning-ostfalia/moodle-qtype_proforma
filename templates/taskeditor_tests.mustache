{{!
    @template qtype_proforma/taskeditor_tests

    The purpose of this template is to render the ProFormA task editor test section

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * proglang programming languages with optional versions

    Example context (json):
    {
        "proglang": [
            {
                "language": "Java",
                "value": "java",
                "version": ["1.8", "11"]
            },
            {
                "language": "Python",
                "value": "python",
                "version": ["3", "3.11"]
            },
            {
                "language": "C++",
                "value": "cpp",
                "version": []
            }
       ]
    }


}}

<div>
    <label for="xml_programming-language">Programming Language:</label>

    <select id="xml_programming-language" class="custom-select">
        {{#proglang}}
            <option value="{{ value }}">{{ language }}</option>
        {{/proglang}}
    </select>

    <label >Version:</label>
    <span id="proglangversion-{{uniqid}}">
        {{#proglang}}
            <select id="xml_programming-language-{{ value }}" style='display: none' class="custom-select">
                {{#version}}
                    <option value="{{ . }}">{{ . }}</option>
                {{/version}}
            </select>
        {{/proglang}}
    <span/">
</div>

<p>
</p>

<div id="testbuttons-{{uniqid}}">
    <button id="addCompilerTest" class="btn btn-secondary java" style="display: none;">New Compiler Test</button>
    <button id="addJUnitTest" class="btn btn-secondary java" style="display: none;">New JUnit Test</button>
    <button id="addCheckStyleTest" class="btn btn-secondary java" style="display: inline-block;">New CheckStyle Test</button>

    <button id="addGoogleTest" class="btn btn-secondary cpp c" style="display: none;">New Google Test</button>
    <button id="addCUnitTest" class="btn btn-secondary c" style="display: none;">New CUnit Test</button>
    <!--<button id="addCCompilerTest" class="btn btn-secondary c" style="display: none;">New C Compiler Test</button>-->

    <button id="addPythonUnittest" class="btn btn-secondary python" style="display: none;">New Python Unittest</button>
    <button id="addPythonDocTest" class="btn btn-secondary python" style="display: none;">New Python DocTest</button>

    <button id="addSetlXTest" class="btn btn-secondary setlx" style="display: none;">New SetlX Test</button>
    <button id="addSetlXSyntaxTest" class="btn btn-secondary setlx" style="display: none;">New SetlX Syntax Test</button>

</div>

<p>
</p>

<input type='file' id='dummy_file_upload_button' style="display: none"/>


{{#js}}
    require(['qtype_proforma/taskeditor'], function(editor) {
        console.log('attach');
        editor.initproglang("proglangversion-{{uniqid}}", id="testbuttons-{{uniqid}}", "xml_programming-language");
    });
{{/js}}
